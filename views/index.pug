extends layout

block content
  h1 People

  each person in people
    .person_container
      .list-item
        .label Name:
        span= person.display_name
      .list-item
        .label Email:
        span= person.email_address
      .list-item
        .label Job Title:
        span= person.title

      .char_frequency_container
        h2 Character Frequency
        table
          tr 
            td Character
            td Count
          tr
            td M
            td 5
          tr
            td A
            td 2

      



